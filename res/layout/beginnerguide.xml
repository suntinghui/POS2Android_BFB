<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pos2android="http://schemas.android.com/apk/res/com.bfb.pos"
    android:id="@+id/content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.bfb.pos.activity.view.viewflow.ViewFlow
        android:id="@+id/guide_gallery"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        pos2android:sidebuffer="4" />

    <com.bfb.pos.activity.view.viewflow.CircleFlowIndicator
        android:id="@+id/viewflowindic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        pos2android:fadeOut="1000"
        pos2android:inactiveType="fill"
        android:layout_marginBottom="20dip" />

    <Button
        android:id="@+id/beginguide_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/beginguide_btn"
        android:layout_marginBottom="45dip"
        android:visibility="gone"/>

</FrameLayout>